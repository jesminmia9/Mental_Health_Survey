        <barcodeSourceRavi8x.camera.GraphicOverlay
            android:id="@+id/graphicOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </barcodeSourceRavi8x.camera.CameraSourcePreview>

</LinearLayout>