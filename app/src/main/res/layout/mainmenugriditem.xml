<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/single_item_id"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" android:gravity="top|center_horizontal"
	android:background="@drawable/button_style_menu"
	android:layout_gravity="center_horizontal|top">

	<LinearLayout android:id="@+id/secimage"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical|center_horizontal"
		android:padding="10dp" android:orientation="vertical">
		<ImageView
			android:id="@+id/itemImage"
			android:gravity="center_horizontal"
			android:layout_width="35sp"
			android:layout_height="35sp"
			android:adjustViewBounds="true"
			android:layout_gravity="center"
			app:tint="@drawable/button_style_line_text_color_theme" />
		<TextView
			android:id="@+id/itemDesc" android:gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@drawable/button_style_line_text_color_theme"
			android:layout_gravity="center" android:textSize="12sp"
			android:padding="5dp"/>
	</LinearLayout>
	<LinearLayout android:layout_below="@+id/secimage" android:visibility="gone"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical|center_horizontal"
		android:padding="10dp" android:orientation="vertical">


	</LinearLayout>

</RelativeLayout>
