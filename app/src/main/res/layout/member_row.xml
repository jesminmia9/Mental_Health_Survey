<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/secListRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/padding_list_row"
    android:paddingTop="0dp">

    <!-- Section for DSSID -->
    <LinearLayout
        android:id="@+id/secMemberName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/DSSID"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/DSSID"
            android:textColor="#006699"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Section for Member Details -->
    <LinearLayout
        android:id="@+id/secMemberDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secMemberName"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="10dp">

        <!-- Member Info Grid -->
        <GridLayout
            android:id="@+id/gridMemberDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:paddingTop="5dp"
            android:paddingBottom="8dp">

            <!-- Row 1 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="Name    :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Name"
                android:textStyle="normal"
                android:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <!-- Row 2 -->
            <TextView
                android:id="@+id/labelHHHead"
                android:text="HHHead :"
                android:textStyle="bold"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/HHHead"
                android:textStyle="normal"
                android:layout_column="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <!-- Row 3 -->
            <TextView
                android:id="@+id/labelMother"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="DOB       :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BDate"
                android:textStyle="normal"
                android:layout_column="1"
                android:layout_width="0dp"
                android:maxLength="10"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <!-- Row 4 -->
            <TextView
                android:text="Mother   :"
                android:textStyle="bold"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/MoName"
                android:textStyle="normal"
                android:maxLength="10"
                android:layout_column="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <!-- Row 5 -->
            <TextView
                android:id="@+id/labelFather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="Age        :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MemberAge"
                android:textStyle="normal"
                android:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <!-- Row 6 -->
            <TextView
                android:text="Father    :"
                android:textStyle="bold"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/FaName"
                android:textStyle="normal"
                android:layout_column="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <!-- Row 7 -->


            <TextView
                android:id="@+id/MemberID"
                android:visibility="gone"
                android:textStyle="normal"
                android:layout_column="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

        </GridLayout>
    </LinearLayout>
</RelativeLayout>